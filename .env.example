# ================================
# PDFSlider Environment Configuration
# ================================
# Copy this file to .env and fill in your actual values
# Instructions:
# 1. Copy this file: cp .env.example .env
# 2. Replace placeholder values with your actual configuration
# 3. Never commit the .env file to git (it's already in .gitignore)

# ================================
# API Configuration (REQUIRED)
# ================================
# Google Gemini API Key
# Get your key from: https://ai.google.dev/
API_KEY=your_api_key_here

# API Endpoint (optional, defaults to Gemini)
VITE_API_ENDPOINT=https://generativelanguage.googleapis.com/v1beta/models

# API Timeout in milliseconds
VITE_API_TIMEOUT=30000

# ================================
# Application Configuration
# ================================
VITE_APP_NAME=PDFSlider
VITE_APP_VERSION=1.0.0

# Environment: development, staging, or production
# (Auto-detected in most cases)
# VITE_ENVIRONMENT=production

# ================================
# Feature Flags
# ================================
# Enable analytics tracking (default: true in production)
VITE_ENABLE_ANALYTICS=false

# Enable error tracking service (default: true in production)
VITE_ENABLE_ERROR_TRACKING=false

# Enable API rate limiting (default: true)
VITE_ENABLE_RATE_LIMITING=true

# ================================
# Rate Limiting Configuration
# ================================
# Time window in milliseconds (default: 60000 = 1 minute)
VITE_RATE_LIMIT_WINDOW=60000

# Maximum requests per window (default: 10)
VITE_RATE_LIMIT_MAX_REQUESTS=10

# ================================
# File Upload Configuration
# ================================
# Maximum file size in bytes (default: 52428800 = 50MB)
VITE_MAX_FILE_SIZE=52428800

# Allowed MIME types (comma-separated)
VITE_ALLOWED_FILE_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ================================
# Logging Configuration
# ================================
# Log level: debug, info, warn, error
VITE_LOG_LEVEL=info

# Enable console logging (default: true in development)
VITE_ENABLE_CONSOLE_LOGGING=true

# ================================
# Security Configuration (Optional)
# ================================
# CORS allowed origins (comma-separated)
# VITE_CORS_ORIGINS=https://yourdomain.com

# Content Security Policy
# VITE_CSP_ENABLED=true
