# Ensure .env files are never accidentally committed
.env filter=git-crypt diff=git-crypt
.env.local filter=git-crypt diff=git-crypt
.env.*.local filter=git-crypt diff=git-crypt

# Line ending normalization
* text=auto
*.tsx text eol=lf
*.ts text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf
